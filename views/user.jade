extends layout
script.
  (function (window, document) {
  document.getElementById('toggle').addEventListener('click', function (e) {
      document.getElementById('tuckedMenu').classList.toggle('custom-menu-tucked');
      document.getElementById('toggle').classList.toggle('x');
  });
  })(this, this.document);
block content
  include menu
  div#main.pure-g
    div.pure-u-1.l-box
      a(href="user/refresh")
        button#apiCallButton.pure-button.pure-button-primary Refresh Tokens 
      h3 Welcome #{user.profile.displayName}!
      p
        div.col-sm-12
        strong ID Token Payload
        br
        pre #{JSON.stringify(decodedIDToken, null, 4)}
      p
        div.col-sm-12
        strong Access Token Payload
        br
        pre #{JSON.stringify(decodedAccessToken, null, 4)}
      p
        strong access_token 
        br
        pre #{user.tokens.accessToken}
      p
        strong refresh_token
        br
        pre #{user.tokens.refreshToken}
